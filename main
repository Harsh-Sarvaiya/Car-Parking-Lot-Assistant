#include <LiquidCrystal.h>
LiquidCrystal lcd(1,3,4,5,6,7);
// defines pins numbers
const int trigPin = 9;
const int echoPin = 10;
int numOfCars;
int durationn = 400;
int d = 250;
// defines variables
long duration;
int distanceCm, distanceInch;
void setup() {
 lcd.begin(16,2);
 pinMode(trigPin, OUTPUT); // Sets the trigPin as an Output
 pinMode(echoPin, INPUT); // Sets the echoPin as an Input
}
void loop() {
    // Clears the trigPin
    digitalWrite(trigPin, LOW);
    delayMicroseconds(2);
    digitalWrite(trigPin, HIGH);
    delayMicroseconds(10);
    digitalWrite(trigPin, LOW);
    duration = pulseIn(echoPin, HIGH);
    distanceCm = duration * 0.034 / 2;
    distanceInch = duration * 0.0113 / 2;


    if (numOfCars >= 0 && numOfCars < 69){
        if(distanceCm > 6.00 && distanceCm < 8.00) {
            numOfCars++;
        }
        lcd.clear();
        lcd.setCursor(0,0);
        lcd.print("Cars: ");
        lcd.print(numOfCars);
        if (distanceCm > 1.00 && distanceCm < 3.00){
            numOfCars--;
        }
        lcd.clear();
        lcd.setCursor(0,0);
        lcd.print("Cars: ");
        lcd.print(numOfCars);
    }
    if (numOfCars == 69){
        lcd.clear();
        lcd.setCursor(0,0);
        lcd.print("This Parking Lot");
        lcd.setCursor(0,1);
        lcd.print("is Full!");
        if (distanceCm > 1.00 && distanceCm < 3.00){
        numOfCars--;
      }
    }
    if(numOfCars == -1){
        numOfCars = 0;
    }

    delay(50);
    lcd.setCursor(0,1);
    delay(10);

//  while(1){
//    tone(8, 698, durationn); // F4
//    delay(d);
//    tone(8, 523, durationn); // C4
//    delay(700);
//    tone(8, 831, durationn); //G4 sharp
//    delay(d);
//    tone(8, 523, durationn);
//    delay(700);
//    tone(8, 784, durationn); //G4
//    delay(d);
//    tone(8, 523, durationn);
//    delay(700);
//    tone(8, 698, durationn);
//    delay(d);
//    tone(8, 523, durationn);
//    delay(d);
//    tone(8, 1047, durationn);//C5
//    delay(500);
//  }
}
